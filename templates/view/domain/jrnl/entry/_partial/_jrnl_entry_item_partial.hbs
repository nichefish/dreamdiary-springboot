<#--
 * 저널 일자(jrnl_day) 목록 조회 Template
 * @included_in : jrnl_day_page.ftlh
 -->

<script type="text/x-handlebars-template" id="jrnl_entry_item_partial">
    <div class="d-flex align-items-center mt-2">
        <div class="col col-md-1 w-5 text-gray-700 fs-6 ps-1 ps-md-5 fw-bolder">
            {{#ifYn entryResolvedYn}}
                <span class="text-success"><@spring.message 'txt.diary'/></span>
                <span class="position-relative d-inline-block">
                  <i class="bi bi-book fs-4 text-success"></i>
                  <i class="bi bi-check fs-2 text-success position-absolute top-25 start-50 translate-middle"></i>
                </span>
            {{else}}
                <span><@spring.message 'txt.diary'/></span>
                    <span class="position-relative d-inline-block">
                    <i class="bi bi-book fs-4 pe-1"></i>
                </span>
            {{/ifYn}}
        </div>
        <div class="col-3 d-none d-md-flex align-items-center gap-2">
            {{> jrnl_diary_reg_btn_partial this}}
            {{> jrnl_entry_context_btn_partial this}}
            {{> jrnl_entry_toggle_btn_partial this}}
        </div>
    </div>
    <div class="jrnl-entry-item" data-id="{{postNo}}" data-collapsed="{{collapsedYn}}">
        <div class="jrnl-entry-cn {{#ifYn collapsedYn}}collapsed{{/ifYn}}">
            {{#each jrnlDiaryList}}
                {{> jrnl_diary_item_partial this}}
            {{/each}}
        </div>
        {{#if (exists tag.list)}}
            <div class="tags jrnl-entry-tags ms-2 mt-3">
                <i class="bi bi-tag"></i>
                {{#tag.list}}
                    {{> tag_list_partial this module="dF.JrnlDreamTag"}}
                {{/tag.list}}
            </div>
        {{/if}}
    </div>
</script>
